<Context path="/UserChat" docBase="www">
    <Resource
        name="jdbc/UserChat"
        auth="Container"
        type="javax.sql.DataSource"
        driverClassName="com.mysql.cj.jdbc.Driver"
        loginTimeout="10"
        validationQuery="SELECT 1"
        maxWait="5000"
        username="root"
        password="1234"
        testOnBorrow="true"
        url="jdbc:mysql://localhost:3306/UserChat?useSSL=false&amp;serverTimezone=UTC"/>

    <ResourceLink
        type="javax.sql.DataSource"
        name="jdbc/UserChat"
        global="jdbc/UserChat"/>
</Context>
